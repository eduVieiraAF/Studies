/* PROGRESS BAR

SEPARATE JAVA CLASS FILE "PROGRESSBAR"

import javax.swing.*;
import java.awt.*;

public class ProgressBar {

    ImageIcon logo = new ImageIcon("fenix16x.png");
    JFrame frame;
    JProgressBar bar = new JProgressBar();

    ProgressBar(){

        bar.setValue(0);
        bar.setBounds(10,10,350,30);
        bar.setStringPainted(true);
        bar.setFont(new Font("Tahoma", Font.BOLD, 20));
        bar.setBackground(Color.black);
        bar.setForeground(new Color(0,125,125));

        frame = new JFrame("Slider Sample");
        frame.setIconImage(logo.getImage());
        frame.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
        frame.setSize(500,500);
        frame.setLayout(null);
        frame.setResizable(false);
        frame.add(bar);
        frame.setVisible(true);

        fill();
    }

    public void fill() {

        int counter = 0;

        while(counter<=100){
            bar.setValue(counter);
            try {
                Thread.sleep(100);
            } catch (InterruptedException e) {
                e.printStackTrace();
            }
            counter += 1;
        }
        bar.setString("PROGRESS COMPLETE");
    }
}
------------------------------------------------------------------------------------------------------------------------

public class Main {
    public static void main(String[] args) {

        ProgressBar progressBar = new ProgressBar();
        }
    }
