        JLabel label  = new JLabel();
        label.setText("Hello there");
        label.setIcon(logo);
        label.setHorizontalTextPosition(JLabel.CENTER);
        label.setVerticalTextPosition(JLabel.TOP);
        label.setForeground(new Color(150,195,185));
        label.setFont(new Font("Calibri", Font.ITALIC,36));
        label.setIconTextGap(25);
        label.setBackground(Color.darkGray);
        label.setOpaque(true); //necessary to show background colour
        label.setBorder(border);

        //label.setBounds(10,10,220,350);

        JFrame frame = new JFrame();
        frame.setTitle("Coding with Java, and also the programming language");
        //frame.setSize(510,510);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setVisible(true);
        //frame.setLayout(null);
        frame.add(label);
        frame.pack(); //To replace all the code line made into comments.
    }
