   inPut = inPutS.next().toLowerCase();
   if (inPut.contains("fuck") || inPut.contains("shit"))
       System.out.println("WATCH YOUR LANGUAGE!");

   if (!inPut.equals("edu"))
       System.out.println("NOPE");
}
while (!inPut.equals("edu"));
